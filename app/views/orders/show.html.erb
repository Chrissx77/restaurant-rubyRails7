<div id="<%= dom_id @order %>" class="card my-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">Ordine #<%= @order.id %></h5>

    <p class="card-text">
      <strong>Tavolo:</strong> <%= @order.table.numero %>
    </p>

    <h6 class="mt-4">Portate:</h6>
    <ul class="list-group list-group-flush">
      <% @order.courses_orders.each do |courses_order| %>
        <li class="list-group-item">
          <strong><%= courses_order.course.nome %></strong> - Quantit√†: <%= courses_order.quantita %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="card-footer bg-transparent d-flex flex-wrap justify-content-start">
    <%= link_to "Modifica", edit_order_path(@order), class: "btn btn-outline-warning btn-sm me-2 mb-2" %>
    <%= link_to "Indietro", orders_path, class: "btn btn-outline-secondary btn-sm me-2 mb-2" %>
    <%= button_to "Cancella", @order, method: :delete, class: "btn btn-outline-danger btn-sm mb-2" %>
  </div>
</div>
