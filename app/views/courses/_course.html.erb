<div id="<%= dom_id course %>" class="container my-3">
  <div class="card shadow-sm border-0 rounded-3 p-4">
    <div class="card-body">
      <h2 class="card-title">Nome:</h2>
      <h5 class="card-text"><%= course.nome %></h5>

      <h3 class="mt-4">Ingredienti</h3>
      <div id="foods" class="mt-3">
        <% course.foods.each do |food| %>
          <%= render partial: "foods/course_food", locals: { food: food } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
