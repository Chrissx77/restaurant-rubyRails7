<% content_for :title, "Tavoli" %>

<div class="my-5">
  <h1>Tavoli</h1>


  <table class="table table-dark table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th scope="col">Numero</th>
      <th scope="col">Posti</th>
      <th colspan="4"></th>

    </tr>
    </thead>
    <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.numero %></td>
        <td><%= table.posti %></td>
        <td><%= link_to "Mostra", table, :class=> "btn btn-secondary" %></td>
        <td><%= button_to "Cancella", table, method: :delete, :class=> "btn btn-secondary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Nuovo Tavolo", new_table_path, :class => "btn btn-secondary" %>
