<% content_for :title, "Courses" %>

<div class="mt-5">
  <h1>Portate</h1>

  <div class="d-flex justify-content-center mb-4">
    <%= link_to "Nuova Portata", new_course_path, class: "btn btn-dark" %>
  </div>

  <div id="courses" class="row row-cols-1 row-cols-md-3 g-4">
    <% @courses.each do |course| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= course.nome %></h5>
            <p class="card-text">
              <strong>Ingredienti:</strong>
              <% course.foods.each do |food| %>
                <%= food.nome %><%= "," unless food == course.foods.last %>
              <% end %>
            </p>
          </div>
          <div class="card-footer bg-transparent d-flex flex-wrap justify-content-start">
            <%= link_to "Mostra Portata", course, class: "btn btn-outline-secondary btn-sm me-2 mb-2" %>
            <%= link_to "Modifica", edit_course_path(course), class: "btn btn-outline-warning btn-sm me-2 mb-2" %>
            <%= button_to "Cancella", course, method: :delete, class: "btn btn-outline-danger btn-sm mb-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
