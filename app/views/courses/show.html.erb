
<div id="<%= dom_id @course %>" class="card my-4 shadow-sm">
  <div class="card-body">
    <h5 class="card-title">Portata: <%= @course.nome %></h5>

    <h6>Ingredienti:</h6>
    <p class="card-text">
      <% @course.foods.each do |food| %>
        <strong>Nome:</strong> <%= food.nome %><br>
        <strong>Categoria:</strong> <%= food.categoria %>
      <% end %>
    </p>
  </div>

  <div class="card-footer bg-transparent d-flex flex-wrap justify-content-start">
    <%= link_to "Modifica", edit_course_path(@course), class: "btn btn-outline-warning btn-sm me-2 mb-2" %>
    <%= link_to "Indietro", courses_path, class: "btn btn-outline-secondary btn-sm me-2 mb-2" %>
    <%= button_to "Cancella", @course, method: :delete, class: "btn btn-outline-danger btn-sm mb-2" %>
  </div>
</div>
