<% content_for :title, "Orders" %>

<div class="mt-5">
  <h1>Ordini</h1>

  <div class="d-flex justify-content-center mb-4">
    <%= link_to "Nuovo Ordine", new_order_path, class: "btn btn-dark" %>
  </div>

  <div id="orders" class="row row-cols-1 row-cols-md-3 g-4">
    <% @orders.each do |order| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Ordine #<%= order.id %></h5>
            <p class="card-text">
              <strong>Tavolo:</strong> <%= order.table.numero %>
            </p>
          </div>

          <div class="card-footer bg-transparent d-flex flex-wrap justify-content-start">
            <%= link_to "Mostra Ordine", order, class: "btn btn-outline-secondary btn-sm me-2 mb-2" %>
            <%= link_to "Modifica", edit_order_path(order), class: "btn btn-outline-warning btn-sm me-2 mb-2" %>
            <%= button_to "Cancella", order, method: :delete, class: "btn btn-outline-danger btn-sm mb-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
