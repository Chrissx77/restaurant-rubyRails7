<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :nome %>
    <h3>Ingrediente</h3>
    <div id="tasks">
      <%= f.simple_fields_for :foods do |food| %>
        <%= render "courses/food_fields", f: food %>
      <% end %>
      <div class="links">
        <%= link_to_add_association "Aggiungi Ingrediente", f, :foods %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>